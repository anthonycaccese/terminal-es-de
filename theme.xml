<theme>

   <variables>
      <spacerImage>./_inc/images/space.png</spacerImage>
   </variables>

   <view name="system,gamelist">
      <image name="background">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <zIndex>0</zIndex>
      </image>
      <image name="list-background">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.5</pos>
         <path>${spacerImage}</path>
         <tile>true</tile>
         <zIndex>1</zIndex>
      </image>
      <textlist name="list">
         <indicators>ascii</indicators>
         <collectionIndicators>ascii</collectionIndicators>
         <letterCaseAutoCollections>capitalize</letterCaseAutoCollections>
         <selectorColor>00000000</selectorColor>
      </textlist>
   </view>
   <view name="gamelist">
      <text name="system-name">
         <text>${system.fullName}</text>
      </text>
      <video name="video">
         <delay>5</delay>
         <imageType>cover,screenshot,titlescreen</imageType>
         <pillarboxes>false</pillarboxes>
         <zIndex>50</zIndex>
      </video>
   </view>

   <variant name="c64">
      <variables>
         <bodyFont>./_inc/fonts/c64.ttf</bodyFont>
      </variables>
      <view name="system,gamelist">
